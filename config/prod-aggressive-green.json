{
  "_comment": "PRODUCTION GREEN (STANDBY) - Conservative configuration for live trading",
  "environment": "prod",
  "stage": "green",
  "account": "REPLACE_WITH_PROD_ACCOUNT_ID",
  "region": "us-east-2",
  "alpaca_secret_name": "trading-bot/alpaca-credentials-prod",
  "alert_email": "",
  "eventbridge_enabled": false,
  "schedule": {
    "trading_interval_minutes": 15,
    "trading_start_hour_et": 9,
    "trading_start_minute_et": 30,
    "trading_end_hour_et": 16,
    "trading_end_minute_et": 0,
    "daily_report_hour_et": 16,
    "daily_report_minute_et": 30
  },
  "market_scanner": {
    "min_stock_price": "10.0",
    "max_stock_price": "500.0",
    "min_daily_volume": "500000",
    "max_universe_size": "200",
    "batch_size": 100,
    "min_data_points": 3
  },
  "lambda": {
    "timeout_minutes": 10,
    "memory_size": 2048,
    "log_level": "INFO"
  },
  "trading": {
    "consensus_threshold": 0.15,
    "historical_data_days": 300,
    "use_margin": false,
    "slippage_tolerance_percentage": 0.75,
    "_slippage_comment": "Max acceptable slippage as percentage (0.75 = 0.75%). Trades exceeding this will be rejected.",
    "_consensus_comment": "Lowered to 0.15 for day trading (any single strategy can trigger, but provides some filtering)"
  },
  "pdt_tracking": {
    "enabled": true,
    "threshold": 25000.0,
    "limit": 3,
    "_comment": "Pattern Day Trading protection: threshold is account value above which PDT doesn't apply, limit is max day trades in 5 days"
  },
  "intraday_exit_rules": {
    "enabled": true,
    "take_profit_percentage": 4.5,
    "partial_exit_percentage": 0.5,
    "trailing_stop_percentage": 0.5,
    "breakeven_threshold_percentage": 1.5,
    "end_of_day_exit_enabled": true,
    "end_of_day_exit_time": "15:45:00",
    "_comment": "Intraday exit rules: take_profit at 4.5% (sell 50%), trailing stop at 50% of peak gain, breakeven at 1.5%, EOD exit at 3:45 PM ET"
  },
  "strategies": {
    "weights": {
      "momentum_breakout": 0.5,
      "opening_range_breakout": 0.3,
      "relative_strength_intraday": 0.2
    },
    "_weights_comment": "Pure day trading strategies - removed swing trading strategies (2025-11-17)",
    "momentum_breakout": {
      "breakout_period": 20,
      "volume_multiplier": 2.0,
      "roc_period": 12,
      "roc_threshold": 0.0,
      "atr_period": 14
    },
    "opening_range_breakout": {
      "opening_range_minutes": 15,
      "min_breakout_percentage": 0.5,
      "volume_multiplier": 2.0,
      "trading_window_hours": 2.0
    },
    "relative_strength_intraday": {
      "lookback_hours": 1,
      "outperformance_threshold": 1.5,
      "underperformance_threshold": 1.0,
      "spy_trend_filter": true
    }
  },
  "risk_management": {
    "layer1_trade_level": {
      "max_risk_per_trade": 0.015,
      "max_position_size": 0.08,
      "atr_stop_multiplier": 1.5
    },
    "layer2_portfolio_level": {
      "max_total_risk": 0.05,
      "max_sector_concentration": 0.25
    },
    "layer3_time_based": {
      "max_daily_loss": 0.015,
      "max_weekly_loss": 0.04,
      "max_drawdown": 0.08
    },
    "layer4_pattern_based": {
      "max_consecutive_losses": 3,
      "min_win_rate": 0.45
    },
    "layer5_market_conditions": {
      "max_vix": 28,
      "max_daily_volatility": 0.04
    },
    "layer6_safeguards": {
      "circuit_breaker_enabled": true,
      "kill_switch_enabled": true,
      "trading_enabled": true
    }
  },
  "position_management": {
    "rebalancing_enabled": true,
    "scoring_weights": {
      "pl_weight": 0.4,
      "momentum_weight": 0.25,
      "volatility_weight": 0.2,
      "time_weight": 0.05,
      "consensus_weight": 0.1
    },
    "momentum_lookback_days": 5,
    "volatility_lookback_days": 20
  },
  "tax_compliance": {
    "wash_sale_tracking_enabled": true,
    "wash_sale_period_days": 30
  },
  "tags": {
    "Environment": "prod",
    "Stage": "green",
    "Project": "TradingBot",
    "ManagedBy": "CDK",
    "CostCenter": "Trading",
    "Strategy": "Conservative-Production"
  }
}